- model_class = User
.page-header
  %h1=t '.title', default: model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @user.email
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @user.name
%p
  %strong= model_class.human_attribute_name(:roles) + ':'
  %br
  = roles_list(@user)


%p
  %strong= model_class.human_attribute_name(:sign_in_count) + ':'
  %br
  = @user.sign_in_count
%p
  %strong= model_class.human_attribute_name(:current_sign_in_at) + ':'
  %br
  = @user.current_sign_in_at
%p
  %strong= model_class.human_attribute_name(:last_sign_in_at) + ':'
  %br
  = @user.last_sign_in_at
%p
  %strong= model_class.human_attribute_name(:current_sign_in_ip) + ':'
  %br
  = @user.current_sign_in_ip
%p
  %strong= model_class.human_attribute_name(:last_sign_in_ip) + ':'
  %br
  = @user.last_sign_in_ip
%p
  %strong= model_class.human_attribute_name(:confirmation_token) + ':'
  %br
  = @user.confirmation_token
%p
  %strong= model_class.human_attribute_name(:confirmed_at) + ':'
  %br
  = l @user.confirmed_at, :full
%p
  %strong= model_class.human_attribute_name(:confirmation_sent_at) + ':'
  %br
  = l @user.confirmation_sent_at, :full
%p
  %strong= model_class.human_attribute_name(:unconfirmed_email) + ':'
  %br
  = @user.unconfirmed_email
%p
  %strong= model_class.human_attribute_name(:encrypted_password) + ':'
  %br
  = @user.encrypted_password
%p
  %strong= model_class.human_attribute_name(:reset_password_token) + ':'
  %br
  = @user.reset_password_token
%p
  %strong= model_class.human_attribute_name(:reset_password_sent_at) + ':'
  %br
  = l @user.reset_password_sent_at, :full
%p
  %strong= model_class.human_attribute_name(:remember_created_at) + ':'
  %br
  = l @user.remember_created_at, :full

.form-actions
  = link_to t('.back', default: t("helpers.links.back")), backend_users_path, class: 'btn'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_backend_user_path(@user), class: 'btn'
  = link_to t('.destroy', default: t("helpers.links.destroy")), backend_user_path(@user), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
