- model_class = User
.page-header
  %h1= t '.title', default: model_class.model_name.human.pluralize
%table.table.table-striped.table-hover
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:roles)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th= model_class.human_attribute_name(:confirmed)
      %th= t '.actions', default: t("helpers.actions")
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= link_to user.email, backend_user_path(user)
        %td= roles_list(user)
        %td= user.name
        %td= l user.created_at, :full
        %td= user.confirmed_at.present? ? t.yes : t.no
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_backend_user_path(user), class: 'btn btn-mini'
          - unless user.confirmed?
            = link_to t('.confirm', default: t("helpers.links.do_confirm")), confirm_backend_user_path(user), class: 'btn btn-mini'
          - unless user == current_user
            = link_to t('.destroy', default: t("helpers.links.destroy")), backend_user_path(user), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_backend_user_path, class: 'btn btn-primary'
