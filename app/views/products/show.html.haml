- model_class = Product
.page-header
  %h1= t '.title', default: model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @product.name
%p
  %strong= model_class.human_attribute_name(:alias_name) + ':'
  %br
  = @product.alias_name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @product.description
%p
  %strong= model_class.human_attribute_name(:structure) + ':'
  %br
  = @product.structure
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @product.price
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @product.position
%p
  %strong= model_class.human_attribute_name(:visible) + ':'
  %br
  = @product.visible

.form-actions
  - if can? :index, Product
    = link_to t('.back', default: t('helpers.links.back')), products_path, class: 'btn'
  - if can? :edit, @product
    = link_to t('.edit', default: t('helpers.links.edit')), edit_product_path(@product), class: 'btn'
  - if can? :destroy, @product
    = link_to t('.destroy', default: t('helpers.links.destroy')), product_path(@product), method: "delete", data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) }, class: 'btn btn-danger'
